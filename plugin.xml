<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="com.emersonar.plugin.widgetfloat"
    version="1.0.0">
    <name>cordova-floating-widget</name>
    <description>create floating widget native</description>
    <license>null</license>

    <js-module src="www/FloatingWidget.js" name="FloatingWidget">
        <clobbers target="FloatingWidget" />
    </js-module>

    <platform name="android">

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FloatingWidget" >
                <param name="android-package" value="com.emersonar.plugin.widgetfloat.FloatingWidget"/>
            </feature>
        </config-file>
        <framework src="com.android.support:support-annotations:28.0.0" />
        <framework src="de.hdodenhof:circleimageview:3.0.1" />
        <framework src="com.squareup.picasso:picasso:2.71828" />
        <framework src="com.android.volley:volley:1.1.1" />
        <framework src="com.android.support:support-compat:27.0.0" />
        <framework src="com.google.android.gms:play-services-location:16.0.0" />
        <framework src="com.karumi:dexter:5.0.0" />
        <framework src="com.google.firebase:firebase-firestore:19.0.0" />

        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
            <uses-permission android:name="android.permission.REORDER_TASKS" />
            <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
            <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
            <uses-permission android:name="android.permission.INTERNET"/>
            <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
        </config-file>
        <source-file src="src/android/FloatingWidget.java" target-dir="src/com/emersonar/plugin/widgetfloat" />
        <source-file src="src/android/FloatingWidgetService.java" target-dir="src/com/emersonar/plugin/widgetfloat" />
        <source-file src="src/android/LocationService.java" target-dir="src/com/emersonar/plugin/widgetfloat" />
        <source-file src="src/android/RequestApi.java" target-dir="src/com/emersonar/plugin/widgetfloat" />

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <service android:name="com.emersonar.plugin.widgetfloat.FloatingWidgetService" />
            <receiver android:name="com.emersonar.plugin.widgetfloat.LocationService" />
        </config-file>

        <resource-file src="res/layout/overlay_layout.xml" target="res/layout/overlay_layout.xml" />
    </platform>

</plugin>